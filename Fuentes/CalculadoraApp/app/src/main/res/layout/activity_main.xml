<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/paddingGeneral"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numero_1_txt"
        android:layout_marginTop="@dimen/topTxt"
        android:textSize="@dimen/tamanioLetra"></TextView>

    <EditText
        android:id="@+id/n1_txt"
        android:hint="@string/numero_1_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="@dimen/topTxt"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numero_2_txt"
        android:layout_marginTop="@dimen/topTxt"
        android:textSize="@dimen/tamanioLetra"></TextView>

    <EditText
        android:id="@+id/n2_txt"
        android:hint="@string/numero_2_txt"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_marginTop="@dimen/topTxt"
        android:layout_height="wrap_content"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topTxt"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sumar_btn"
            android:text="+"
            android:textSize="@dimen/tamanioLetra"
            android:layout_weight="1"
            android:onClick="sumar"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/altoBoton"></Button>

        <Button
            android:id="@+id/restar_btn"
            android:text="-"
            android:textSize="@dimen/tamanioLetra"
            android:layout_weight="1"
            android:onClick="restar"
            android:background="@color/primary_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/altoBoton"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/topTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/multi_btn"
            android:text="*"
            android:textSize="@dimen/tamanioLetra"
            android:layout_weight="1"
            android:onClick="multiplicar"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/altoBoton"></Button>

        <Button
            android:id="@+id/dividir_btn"
            android:text="/"
            android:textSize="@dimen/tamanioLetra"
            android:layout_weight="1"
            android:onClick="dividir"
            android:background="@color/rojo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/altoBoton"></Button>

    </LinearLayout>
</LinearLayout>